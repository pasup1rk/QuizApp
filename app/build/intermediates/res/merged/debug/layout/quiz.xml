<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
   
    tools:context=".MainActivity" >
<RelativeLayout
    android:id="@+id/layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#58ACFA"
    android:layout_width="fill_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Quiz Application"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    </RelativeLayout>
    <TextView
        android:id="@+id/textView_qno"
        android:layout_below="@+id/layout"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView_questions"
        android:layout_alignBaseline="@+id/textView_qno"
        android:layout_alignBottom="@+id/textView_qno"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/layout"
        android:layout_toRightOf="@+id/textView_qno"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_option1"
        android:layout_below="@+id/textView_qno"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Button"
         android:background="@drawable/customborder_unselect_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_option2"
        android:layout_alignLeft="@+id/button_option1"
        android:layout_below="@+id/button_option1"
        android:layout_marginTop="20dp"
        android:text="Button"
         android:background="@drawable/customborder_unselect_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_option3"
        android:layout_alignLeft="@+id/button_option2"
        android:layout_below="@+id/button_option2"
        android:layout_marginTop="20dp"
        android:text="Button"
         android:background="@drawable/customborder_unselect_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_option4"
        android:layout_alignLeft="@+id/button_option3"
        android:layout_below="@+id/button_option3"
         android:layout_marginTop="20dp"
         android:text="Button"
         android:background="@drawable/customborder_unselect_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_previous"
        android:layout_alignLeft="@+id/button_option4"
        android:layout_below="@+id/button_option4"
        android:layout_marginTop="32dp"
        android:background="@drawable/customborder_greenbutton"
        android:text="Previous"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_next"
        android:layout_alignBaseline="@+id/button_previous"
        android:layout_alignBottom="@+id/button_previous"
        android:layout_alignRight="@+id/button_option4"
        android:background="@drawable/customborder_greenbutton"
        android:text="Next"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />

</RelativeLayout>